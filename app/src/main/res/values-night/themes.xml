<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EstateGuard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/skyner_accent</item>
        <item name="colorOnPrimary">@color/primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSecondaryVariant">@color/skyner_dark</item>
        <item name="colorOnSecondary">@color/primary_dark</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/skyner_accent</item>
        <item name="android:navigationBarColor">@color/skyner_accent</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Dark theme specific styles -->
    <style name="EstateGuard.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>